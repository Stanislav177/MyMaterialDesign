<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titlePictureOfTheDayPicturePager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_title" />

        <com.example.mymaterialdesign.utils.EquilateralImageView
            android:id="@+id/imageToDayPicturePager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="@drawable/ic_no_photo_vector" />


    </LinearLayout>

    <include
        android:id="@+id/includeMainFragmentPicturePager"
        layout="@layout/bottom_sheet_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>