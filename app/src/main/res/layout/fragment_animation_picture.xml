<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintCont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.animationPictureToDay.AnimationPictureFragment"
    >

    <com.example.mymaterialdesign.utils.EquilateralImageView
        android:id="@+id/pictureCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titlePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/pictureCustom"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollDesc"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintEnd_toStartOf="@+id/pictureCustom"
        app:layout_constraintTop_toBottomOf="@+id/pictureCustom">

        <TextView
            android:layout_marginBottom="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/descriptionPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>